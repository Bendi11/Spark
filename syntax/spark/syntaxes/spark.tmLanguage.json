{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Spark",
	"patterns": [
		{
			"name": "keyword.other",
			"match": "\\b(let|struct|union|fun|ns|use|true|false|type)\\b"
		},
		{
			"name": "keyword.control",
			"match": "\\b(if|while|ret|else|switch|break)\\b"
		},
		{
			"name": "comment.line",
			"match": "//.*\n"
		},
		{
			"name": "entity.name.function",
			"match": "\\b\\w+(\\w|_)*(?=\\()"
		},
		{
			"name": "entity.name.class",
			"match": "(?<=\\b(struct|union)\\s+)\\w(\\w|_|::)*\\b"
		},
		{
			"name": "storage.modifier",
			"match": "\\b(ext|const|static|asm)\\b"
		},
		{
			"name": "storage.type",
			"match": "\\b(((u|i)(8|16|32|64|size)|bool|void|ptr))|(?<=\\b(let)\\().*(?=\\))\\b"
		},
		{
			"name": "constant.numeric",
			"match": "\\b[0-9]+((u|i)(8|16|32|64))?"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#characters"
		}
	],
	
	"repository": {
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"characters": {
			"name": "constant.character",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.spark"
}